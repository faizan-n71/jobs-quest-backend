{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "types": ["./src/global.d.ts"],
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@routers/*": ["routers/*"],
      "@actions/*": ["actions/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": [
    "src"
, "api"  ],
}
